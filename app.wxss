@import '/assets/iconfont/iconfont.wxss';

page {
  background-color: #f8f8f8;
}

.page {
  background-color: #f8f8f8;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0px;
  bottom: 0px;
  right: 0px;
  left: 0px;
}

.page_hd {
  padding: 0px 30rpx 40rpx 30rpx;
  background-color: #1296DB;
  color: #fff;
}

.page_hd .hd_smfont{
  font-size: 20rpx;
}

.page_bd {
  padding-bottom: 20rpx;
}

.page_bd_spacing {
  padding-left: 7.5rpx;
  padding-right: 7.5rpx;
}

.page_ft {
  text-align: center;
}
.page_ft.float{
  position: fixed;
  bottom: 0px;
  width: 100%;
}

.page__title {
  text-align: left;
  font-size: 10rpx;
  font-weight: 20rpx;
}

.page_desc {
  margin-top: 2.5rpx;
  color: #888;
  text-align: left;
  font-size: 7rpx;
}

.cells_title {
  color: #b2b2b2;
  font-size: 28rpx;
  padding: 30rpx 30rpx 16rpx 30rpx;
}

.cells {
  background: #fff;
  border: solid #f5f5f5;
  border-width: 1rpx 0px;
}

.cells .cell {
  padding: 30rpx 30rpx;
  position: relative;
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
}

.cells .cell:last-child {
  border-bottom: none;
}

.cells .cell_link .cell_ft::after {
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: relative;
  top: -4rpx;
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 4rpx;
}
.cells .cell_input textarea{
  width: 100%;
}

.cells .cell_link .cell_ft {
  padding-right: 22rpx;
}

.cells .cell .cell_hd {
  width: 170rpx;
  color: #353535;
}

.cells .cell .cell_bd {
  text-align: right;
  -webkit-box-flex: 1;
  -webkit-fix: 1;
  flex: 1;
  color: #353535;
  padding: 0px 10rpx;
}

.cells .cell .cell_ft {
  text-align: right;
  color: #888;
  position: relative;
}

.cells .cell view:first-child{
  text-align: left;
}

.cells.form_cells .cell .cell_hd{
  color: #888888;
}

.button_area {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding: 0px 30rpx;
}
button{
  margin-bottom: 30rpx;
}

button.primary{
  background: #1296DB;
  color: #ffffff;
  box-shadow: 5rpx 5rpx 15rpx #1296DB;
}

.text_right{
  text-align: right;
}

i{ vertical-align: middle;}