<view class='page'>
  <view class='page_bd'>
    <view class='cells form_cells'>
      <view class='cell cell_input'>
        <view class='cell_hd'>名称</view>
        <view class='cell_bd'>
          <input type='text' maxlength='50' placeholder='标签名称'></input>
        </view>
      </view>
      <view class='cell cell_link' bindtap='goSelIcon'>
        <view class='cell_hd'>图标</view>
        <view class='cell_bd'>
          <span style='color:#888888;'>点击选择图标</span>
        </view>
        <view class='cell_ft'></view>
      </view>
      <view class='cell cell_input'>
        <view class='cell_hd'>备注</view>
        <view class='cell_bd'>
          <textarea placeholder='请输入标签备注' maxlength='500' auto-height='true'></textarea>
        </view>
      </view>
    </view>
    <view class='button_area'>
      <button class='primary'>保存</button>
    </view>
  </view>
</view>
